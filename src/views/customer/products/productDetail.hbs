<section class="shop-details pt-5 mt-5">
    <div class="product__details__pic">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="product__details__breadcrumb">
                        <a href="/index">Home</a>
                        <a href="/product">Shop</a>
                        <span>Product Details</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-9">
                    <div class="tab-content">
                        <div class="tab-pane active" id="tabs-1" role="tabpanel">
                            <div class="product__details__pic__item">
                                <img src="{{result.PRODUCT_IMAGE}}" alt="" width="200" height="250">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="product__details__content">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-8">
                    <div class="product__details__text">
                        <h4>{{result.PRODUCT_NAME}}</h4>
                        <h3>{{result.PRODUCT_PRICE}}</h3>
                        <p>{{result.PRODUCT_DESCRIPTION}}</p>

                        <div class="product__details__cart__option">

                            <a href="#" class="primary-btn">add to cart</a>
                        </div>


                    </div>
                </div>
            </div>
            <div class="row">
                <script>
                    { { !-- const img_arr = ['/student/HTML_COURSE.png', '/student/HTML_COURSE.png', '/student/HTML_COURSE.png', '/student/HTML_COURSE.png', '/student/HTML_COURSE.png']-- } }
                    const courseName_arr = ['1 Hour HTML', '1 Hour HTML', '1 Hour HTML', '1 Hour HTML', '1 Hour HTML']
                    const cost_arr = ['$30.00', '$30.00', '$30.00', '$30.00', '$30.00']

                    for (let i = 0; i < 5; i++) {
                        document.write(`
                            <div class="m-2">
                                <div class= "course__item " >
                                    <div class="course__item__pic set-bg">
                                        <a href="#">
                                            <img src="/img/product/PM1.jpg" alt="">
                                        </a>
                                        <ul class="course__item__pic__hover">
                                            <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                            <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                            <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                                        </ul>
                                    </div>
                                    <div class="course__item__text">
                                        <h6><a href="#">${courseName_arr[i]}</a></h6>
                                        <h5>${cost_arr[i]}</h5> 
                                    </div>
                                </div>
                            </div>
                    `);
                    }
                </script>
            </div>
        </div>
</section>
{{!-- End: 5 other courses in the same category are bought the most --}}
</div>
</div>
</section>
<!-- Shop Details Section End -->

<!-- Review Section Begin -->
<section class="related spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="related-title">CUSTOMER'S FEEDBACK</h3>
            </div>
        </div>
        <div class="row">
            {{#each reviews}}
            <div class="container text-left mb-5 p-0">
                <div class=" order-card card row  review mx-auto p-3" id="1">

                    <div class="card-body">
                        <h5 class="card-text email_title">{{USER_EMAIL}}</h5>
                        <div class="small_card row m-3 p-0">

                            <div class="rating">
                                {{{starRating PRODUCT_RATING}}}
                            </div>

                        </div>
                        <p class="card-text text-left px-2">{{PRODUCT_REVIEW}}</p>

                    </div>
                </div>
            </div>
            {{/each}}
        </div>

    </div>
</section>
<!-- Review Section End -->

