<!-- Shopping Cart Section Begin -->
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="shopping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="cart-item">
                            {{#each detail}}
                            <tr>
                                <td class="product__cart__item">
                                    <div class="product__cart__item__pic">
                                        <img src="{{PRODUCT_IMAGE}}" alt="" width="50" height="75">
                                    </div>
                                    <div class="product__cart__item__text">
                                        <h6>{{PRODUCT_NAME}}</h6>
                                        <h5>{{PRODUCT_PRICE}}</h5>
                                    </div>
                                </td>                             
                                
                                <td class="quantity__item">
                                    <div class="quantity">
                                        {{!-- <div class="pro-qty-2">
                                            <input type="text" value="{{QUANTITY}}">
                                        </div> --}}
                                        <div class="pro-qty">
                                            <button class="product-btn" value="{{PRODUCT_ID}}"
                                                onclick="descQuantity(this.value)">
                                                <span class="dec qtybtn">-</span>
                                            </button>
                                            <input type="text" value="{{QUANTITY}}" disabled>
                                            <button class="product-btn " value="{{PRODUCT_ID}}"
                                                onclick="incrQuantity(this.value)">
                                                <span class="inc qtybtn">+</span>
                                            </button>
                                        </div>
                                    </div>
                                </td>
                                <td class="cart__price">{{total}}</td>
                                <td class="cart__close">
                                    {{!-- <a href="/cart/remove/{{PRODUCT_ID}}"><i
                                            class="fa fa-close"></i></a> --}}
                                    <button class="product-btn" onclick="removeSer(this.value)" value="{{PRODUCT_ID}}">
                                        <span class="fa fa-close"></span>
                                    </button>
                                </td>

                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                {{!-- <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="continue__btn">
                            <a href="#">Choose ALL</a>
                        </div>
                    </div>
                </div> --}}
            </div>
            <div class="col-lg-4">
                <div class="cart__total" id="pre-checkout">
                    <h6>Cart total</h6>
                    <ul>
                        <li>Total <span>{{total}}</span></li>
                    </ul>
                    <a href="/cart/checkout?promotion_id=" value="{{total}}" class="primary-btn">Checkout</a>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="/js/cart.js"></script>